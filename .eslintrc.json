{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [ "jsx-a11y", "react", "import" ],
    "rules": {
        "no-var": 2,
        "constructor-super": 2,
        "no-trailing-spaces": 2,
        "max-len": 0,
        "no-underscore-dangle": 0,
        "linebreak-style": 0,
        "comma-dangle": [ 2, "never" ],
        "indent": [ 2, 4],
        "quotes": [ 2, "single" ],
        "semi": [ 2, "always" ],
        "no-console": 0
    },
    "settings": {
        "import/parser": "babel-eslint",
        "import/resolve": {
            "moduleDirectory": ["node_modules", "src"]
        }
    }
}
